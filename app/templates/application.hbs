<div class='container'>
  <h1>{{t 'app_title'}}</h1>
  <p class='lead'>
    {{t 'app_lead.before_link'}}
    <a href='https://www.azores.gov.pt/Portal/pt/entidades/srs/livres/Linha+Saude+Acores.htm'>
      {{t 'app_lead.link'}}
    </a>
    {{t 'app_lead.after_link'}}
  </p>
  <div class='container map-container'>
    <div class='row'>
      <CasesMap @class={{'col-3 map align-self-start'}} @id={{'western-group'}} @mapKey={{'westernGroup'}} @data={{model}} @longitude={{-29.0}} @latitude={{39.1}} @scale={{10000}}/>
      <CasesMap @class={{'col-9 map align-self-center'}} @id={{'central-group'}} @mapKey={{'centralGroup'}} @data={{model}} @longitude={{-28.3}} @latitude={{38.7}} @scale={{12000}}/>
      <CasesMap @class={{'col-3 map align-self-end'}} @id={{'eastern-group'}} @mapKey={{'easternGroup'}} @data={{model}} @longitude={{-22.75}} @latitude={{36.92}} @scale={{8000}}/>
    </div>
  </div>
  <div class='container'>
    <div class='row'>
      <div class='col'>
        <TotalCasesChart @data={{model}}/>
      </div>
      <div class='col'>
        <DailyCasesChart @data={{model}} />
      </div>
    </div>
  </div>
  <p class='text-center'>
    <small>
      {{t 'app_foot.before_link'}}
      <a href='https://ko-fi.com/ninjatronic'>
        {{t 'app_foot.link'}}
      </a>.
    </small>
  </p>
</div>
